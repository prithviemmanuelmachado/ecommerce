<html>
    <head>
        <title>
            HOME
        </title>
        <link rel="stylesheet" href="style/style.css">
    </head>
    <body>
        <%-include(header)-%>
        <br><br>
        <div id="container">
            <% products.forEach(function(product){ %>
                <br>
                <div class="cards <%= product.orientation %>" id="<%= product.id %>">
                    <img class="<%= product.class %>" src="/images/<%= product.image %>"/><br><br>
                    <h1> <%= product.title %> </h1><br><br><br>
                    <button class='view'>VIEW</button>
                    
                </div>
                <br>
            <% }) %>
            <%- loadmore %>
        </div>
        
        
    </body>
    <script src="/js/home.js"></script>
</html>